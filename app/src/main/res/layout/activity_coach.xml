<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <!-- Foto Pelatih -->

    <!-- Card Biodata -->
    <ImageView
        android:id="@+id/coachImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_image_bg"
        android:contentDescription="@string/desc_coach_photo"
        android:scaleType="centerCrop"
        android:src="@drawable/coach_mahmud" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:backgroundTint="#FF9999">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/coachName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mahmud Figmansyah"
                android:textStyle="italic"
                android:textSize="20sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/coachBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1945-8-12"
                android:layout_marginTop="6dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/coachCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blater"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
